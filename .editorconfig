# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,mjs,cjs,ts,jsx,tsx}]
indent_style = space
indent_size = 2

[*.{css,scss}]
indent_style = space
indent_size = 2

[*.{json,jsonc,yml,yaml}]
indent_style = space
indent_size = 2

[*.{glsl,frag,vert}]
indent_style = space
indent_size = 2

[*.{html,ejs}]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[*.applescript]
indent_style = tab
indent_size = 2

# align with laravel
[*.{php}]
indent_style = space
indent_size = 4

# align with django
[*.py]
max_line_length = 119
indent_style = space
indent_size = 4
